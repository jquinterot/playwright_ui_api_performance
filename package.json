{
  "name": "playwright_visual_test",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "ui:acceptance": "cd ui && npx playwright test --grep @acceptance --project=chromium",
    "ui:accessibility": "cd ui && npx playwright test --grep @accessibility --project=chromium",
    "ui:visual": "cd ui && npx playwright test --grep @visual --project=chromium",
    "ui:regression": "cd ui && npx playwright test --grep @regression --project=chromium",
    "ui:mode": "cd ui && npx playwright test --ui --project=chromium",
    "ui:update-snapshots": "cd ui && npx playwright test --update-snapshots --project=chromium",
    "api:acceptance": "cd api && npx playwright test --grep @acceptance --project=chromium",
    "performance:test": "cd performance && k6 run load_test.ts",
    "performance:stress": "cd performance && k6 run stress_test.ts",
    "performance:spike": "cd performance && k6 run spike_test.ts",
    "performance:soak": "cd performance && k6 run soak_test.ts",
    "performance:api": "cd performance && k6 run api_load_test.ts",
    "performance:browser": "cd ui && npx playwright test performance/browser_performance_test.ts",
    "performance:endpoint": "cd performance && k6 run endpoint_response_time_test.ts",
    "performance:journey": "cd performance && k6 run user_journey_test.ts",
    "performance:database": "cd performance && k6 run database_performance_test.ts",
    "performance:file": "cd performance && k6 run file_transfer_test.ts",
    "performance:threshold": "cd performance && k6 run threshold_test.ts",
    "lint": "eslint --ignore-path .eslintignore --ext .ts",
    "install:browsers": "npx playwright install",
    "test:monitors": "cd ui && npx playwright test tests/order_management/check_monitors.spec.ts --project=chromium",
    "test:phones": "cd ui && npx playwright test tests/order_management/check_phones.spec.ts --project=chromium",
    "ui:monitors": "cd ui && npx playwright test --grep @Monitor --project=chromium",
    "ui:debug": "cd ui && npx playwright test --grep @acceptance --project=chromium --debug"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.56.0",
    "@types/node": "^20.5.9",
    "husky": "^8.0.3",
    "prettier": "^3.0.3"
  },
  "lint-staged": {
    "**/*.ts": [
      "npm run format",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format"
    }
  },
  "dependencies": {
    "@axe-core/playwright": "^4.7.3",
    "@playwright/mcp": "^0.0.37",
    "@types/k6": "^0.48.0",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.48.0",
    "eslint-plugin-playwright": "^0.16.0"
  }
}
