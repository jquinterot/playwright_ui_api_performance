{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["ui/*"],
      "@helpers/*": ["ui/helpers/*"],
      "@actions/*": ["ui/actions/*"],
      "@pages/*": ["ui/pages/*"],
      "@tests/*": ["ui/tests/*"]
    }
  },
  "include": ["ui/**/*"],
  "exclude": ["node_modules"]
}
